<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/john_book_button"
android:clickable="true"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginVertical="10dp"
android:orientation="horizontal">

<RelativeLayout
    android:layout_width="110dp"
    android:layout_height="110dp"
    android:layout_marginLeft="40dp"
    android:background="@drawable/lightgray_rounded_box">

    <ImageView
        android:id="@+id/mentor_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/john1"/>

</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_alignParentBottom="true"
    android:layout_marginHorizontal="40dp"
    android:background="@drawable/white_rounded_box"
    android:layout_gravity="bottom">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mentor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="7dp"
                android:text="John Cooper"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/mentor_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="3dp"
                android:text="$500/Session"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:textSize="7sp"
                android:textColor="#EBB800"/>
        </LinearLayout>

        <TextView
            android:id="@+id/mentor_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="Lead - Technology Officer"
            android:textColor="@color/black"
            android:textSize="8sp"
            android:textAlignment="gravity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/green_circle"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/mentor_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textSize="10sp"
                android:textColor="#40ac01"
                android:gravity="center_vertical"
                android:layout_marginStart="2dp"/>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:background="@drawable/red_heart"/>
</RelativeLayout>

</LinearLayout>