<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

<ImageView
    android:id="@+id/mentor_img"
    android:layout_marginLeft="35dp"
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@drawable/john1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/white_rounded_box"
        android:layout_gravity="center_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mentor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="7dp"
                    android:text="John Cooper"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/session_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_marginTop="5dp"
                    android:text="20-2-2024"
                    android:textStyle="bold"
                    android:textAlignment="textEnd"
                    android:textSize="8sp"
                    android:textColor="#EBB800"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mentor_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:text="Lead - Technology Officer"
                    android:textColor="@color/black"
                    android:textSize="7sp"
                    android:textAlignment="gravity" />

                <TextView
                    android:id="@+id/session_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textAlignment="viewEnd"
                    android:text="10:00pm"
                    android:textStyle="bold"
                    android:textSize="8sp"
                    android:textColor="#EBB800"/>
            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>